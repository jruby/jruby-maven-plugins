<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.saumya.mojo.jruby9</groupId>
  <artifactId>archive</artifactId>
  <version>testing</version>  
  
  <repositories>
    <repository>
      <id>sonatype</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
   
  <pluginRepositories>
    <pluginRepository>
      <id>rubygems-releases</id>
      <url>http://rubygems-proxy.torquebox.org/releases</url>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>
    <dependency>
      <groupId>org.jruby</groupId>
      <artifactId>jruby-complete</artifactId>
      <version>${j.version}</version>
      <!--
          <type>pom</type>
          -->
    </dependency>
  </dependencies>

  <properties>
    <j.version>1.7.21</j.version>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${basedir}</directory>
        <includes>
          <include>test.rb</include>
          <include>spec/**</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
	<executions>
	  <execution>
            <id>default-jar</id>
            <phase>omit</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>jruby9-jar-maven-plugin</artifactId>
        <version>@project.version@</version>
        <configuration>
          <type>archive</type>
          <jrubyVersion>${j.version}</jrubyVersion>
        </configuration>
	<executions>
	  <execution>
            <id>jruby-jar</id>
	    <goals>
              <goal>generate</goal>
              <goal>process</goal>
              <goal>jar</goal>
            </goals>
	  </execution>
	</executions>
        <dependencies>
          <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.6</version>
          </dependency>
          <dependency>
            <groupId>rubygems</groupId>
            <artifactId>leafy-rack</artifactId>
            <version>0.4.0</version>
            <type>gem</type>
          </dependency>
          <dependency>
            <groupId>rubygems</groupId>
            <artifactId>minitest</artifactId>
            <version>5.7.0</version>
            <type>gem</type>
          </dependency>
          <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.7.6</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
